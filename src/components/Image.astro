---
import { buildUrl } from "../lib/image";

interface Props {
  src: string;
}

const { src } = Astro.props;

const url = buildUrl(src);
---

<img
  src={url}
  loading="lazy"
  alt={`visual option ${src}`}
  crossorigin="anonymous"
  class="h-[200px] cursor-pointer rounded-xl grayscale transition-all duration-300 ease-in-out hover:-translate-y-1"
/>
